<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="false">
        <shape
            android:shape="rectangle" >

            <corners
                android:radius="15dp" />

            <size
                android:width="25dp"
                android:height="20dp" />

            <solid
                android:color="@color/gray_200" />
        </shape>
    </item>
    <item
        android:state_checked="true">
        <shape
            android:shape="rectangle" >

            <corners
                android:radius="15dp" />

            <size
                android:width="30dp"
                android:height="25dp" />

            <solid
                android:color="@color/green_500" />
        </shape>
    </item>
</selector>