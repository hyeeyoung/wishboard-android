<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.my.screens.MyFragment">

    <data>

        <variable
            name="viewModel"
            type="com.hyeeyoung.wishboard.viewmodel.MyViewModel" />

        <import type="com.hyeeyoung.wishboard.R" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/spacingBase"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                style="@style/Widget.Tab.TextAppearance.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_profile_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/spacingBase"
                    android:background="@drawable/shape_border_radius_32"
                    android:backgroundTint="@color/black"
                    android:paddingVertical="@dimen/spacing20"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/profile_image_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/shape_border_radius_45"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_background_user_profile"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageButton
                            android:id="@+id/camera"
                            style="@style/Widget.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="-20dp"
                            android:layout_marginBottom="1dp"
                            android:src="@drawable/ic_camera"
                            app:layout_constraintBottom_toBottomOf="@id/profile_image"
                            app:layout_constraintStart_toEndOf="@id/profile_image"
                            app:tint="@color/green_500" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacingBase"
                        android:fontFamily="@font/montserrat_b"
                        android:text="@{viewModel.userNickname}"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/profile_image_container"
                        tools:text="wish201801" />

                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacingSmall"
                        android:fontFamily="@font/suit_r"
                        android:text="@{viewModel.userEmail}"
                        android:textColor="@color/gray_200"
                        android:textSize="@dimen/typographyDescription"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/user_name"
                        tools:text="wishboard@gmail.com" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="100dp"
                    app:layout_constraintTop_toBottomOf="@id/user_profile_container">

                    <TextView
                        style="@style/My.Section.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_title_settings"
                        android:textAppearance="@style/My.Section.Title.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <LinearLayout
                        android:id="@+id/noti_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/My.Section.SubTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/noti_setting"
                            android:textAppearance="@style/My.Section.SubTitle.TextAppearance" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/noti_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing5"
                            android:checked="@{viewModel.pushState}"
                            app:switchMinWidth="50dp"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/selector_switch_track" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        style="@style/My.Section.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_title_customer_support"
                        android:textAppearance="@style/My.Section.Title.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        android:id="@+id/contact_us"
                        style="@style/My.Section.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_sub_title_contact_us"
                        android:textAppearance="@style/My.Section.SubTitle.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        style="@style/My.Section.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_title_service_info"
                        android:textAppearance="@style/My.Section.Title.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        android:id="@+id/how_to_use"
                        style="@style/My.Section.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_sub_title_how_to_use"
                        android:textAppearance="@style/My.Section.SubTitle.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        android:id="@+id/terms"
                        style="@style/My.Section.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_sub_title_terms"
                        android:textAppearance="@style/My.Section.SubTitle.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/My.Section.SubTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/spacing12"
                            android:text="@string/my_section_sub_title_version_info"
                            android:textAppearance="@style/My.Section.SubTitle.TextAppearance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacingBase"
                            android:fontFamily="@font/montserrat_sb"
                            android:text="@string/service_version"
                            android:textColor="@color/gray_200"
                            android:textSize="@dimen/typographyDescription" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        style="@style/My.Section.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_title_account_management"
                        android:textAppearance="@style/My.Section.Title.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        android:id="@+id/logout"
                        style="@style/My.Section.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_sub_title_logout"
                        android:textAppearance="@style/My.Section.SubTitle.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />

                    <TextView
                        android:id="@+id/exit"
                        style="@style/My.Section.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_section_sub_title_exit"
                        android:textAppearance="@style/My.Section.SubTitle.TextAppearance" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_100" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>