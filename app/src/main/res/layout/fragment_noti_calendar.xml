<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.noti.screens.NotiCalendarFragment">

    <data>

        <variable
            name="viewModel"
            type="com.hyeeyoung.wishboard.viewmodel.NotiViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/spacingBase"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title"
                style="@style/Widget.Tab.TextAppearance.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="캘린더"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/millis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_eb"
            android:gravity="center"
            android:text="@{viewModel.calendarMonthTitle}"
            android:textColor="@color/gray_700"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:text="March 2022" />

        <GridLayout
            android:id="@+id/day_of_the_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing12"
            android:columnCount="7"
            android:rowCount="1"
            app:layout_constraintTop_toBottomOf="@id/millis">

            <TextView
                style="@style/Calendar.DayOfTheWeek"
                android:text="Sun"
                android:textAppearance="@style/Calendar.DayOfTheWeek.TextAppearance" />

            <TextView
                style="@style/Calendar.DayOfTheWeek"
                android:text="Mon"
                android:textAppearance="@style/Calendar.DayOfTheWeek.TextAppearance" />

            <TextView
                style="@style/Calendar.DayOfTheWeek"
                android:text="Tue"
                android:textAppearance="@style/Calendar.DayOfTheWeek.TextAppearance" />

            <TextView
                style="@style/Calendar.DayOfTheWeek"
                android:text="Wen"
                android:textAppearance="@style/Calendar.DayOfTheWeek.TextAppearance" />

            <TextView
                style="@style/Calendar.DayOfTheWeek"
                android:text="Thu"
                android:textAppearance="@style/Calendar.DayOfTheWeek.TextAppearance" />

            <TextView
                style="@style/Calendar.DayOfTheWeek"
                android:text="Fri"
                android:textAppearance="@style/Calendar.DayOfTheWeek.TextAppearance" />

            <TextView
                style="@style/Calendar.DayOfTheWeek"
                android:text="Sat"
                android:textAppearance="@style/Calendar.DayOfTheWeek.TextAppearance" />
        </GridLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/day_of_the_week" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>